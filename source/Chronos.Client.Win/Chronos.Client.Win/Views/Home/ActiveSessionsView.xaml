<views:View x:Class="Chronos.Client.Win.Views.Home.ActiveSessionsView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:views="clr-namespace:Chronos.Client.Win.Views"
            DisplayPanel="True">
    <Grid>
        <ListView ItemsSource="{Binding ActiveSessions}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="PID" DisplayMemberBinding="{Binding Process.ProcessId}"/>
                    <GridViewColumn Header="Process Name" DisplayMemberBinding="{Binding Process.ProcessName}"/>
                    <GridViewColumn Header="Started At" DisplayMemberBinding="{Binding Process.StartTime}"/>
                    <GridViewColumn Header="State" DisplayMemberBinding="{Binding SessionState}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</views:View>
