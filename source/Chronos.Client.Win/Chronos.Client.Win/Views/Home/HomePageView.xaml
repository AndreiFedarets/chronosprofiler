<adenium:View x:Class="Chronos.Client.Win.Views.Home.HomePageView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:adenium="clr-namespace:Adenium;assembly=Adenium"
                MinWidth="700" MinHeight="500" Height="700" DisplayPanel="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0" x:Name="ViewContent" />
        <TextBlock Grid.Row="1" HorizontalAlignment="Left" Text="{Binding StartupTime, StringFormat='Startup time: {0} sec'}" />
    </Grid>
</adenium:View>