            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:adenium="clr-namespace:Adenium;assembly=Adenium"
            DisplayPanel="True" Height="80">
    <ComboBox ItemsSource="{Binding Applications}" SelectedItem="{Binding SelectedApplication}" DisplayMemberPath="EnvironmentInformation.MachineName" />
</adenium:View>
