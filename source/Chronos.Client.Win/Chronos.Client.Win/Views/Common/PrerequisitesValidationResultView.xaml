<views:View x:Class="Chronos.Client.Win.Views.Common.PrerequisitesValidationResultView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:views="clr-namespace:Chronos.Client.Win.Views"
            ContentHeight="100">
    <Grid>
        <ItemsControl ItemsSource="{Binding ValidationResults}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Message}" Foreground="Red" TextWrapping="Wrap"/> 
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</views:View>
