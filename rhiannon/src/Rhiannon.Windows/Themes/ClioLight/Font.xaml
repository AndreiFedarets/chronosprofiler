<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:system="clr-namespace:System;assembly=mscorlib">
    <FontFamily x:Key="{x:Type FontFamily}">Segoe UI</FontFamily>
	<FontWeight x:Key="{x:Type FontWeight}">Thin</FontWeight>
	<system:Double x:Key="LargeFontSize">15</system:Double>
	<system:Double x:Key="NormalFontSize">12</system:Double>
	<system:Double x:Key="SmallFontSize">10</system:Double>
</ResourceDictionary>